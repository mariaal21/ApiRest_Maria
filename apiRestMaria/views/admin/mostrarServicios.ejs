<%- include('./templates/header.ejs') %>
<%- include('./templates/nav-todos.ejs') %>

        <main class="mainbody columnas">

            <h2>
                <%= titulo %>
            </h2>

            <p>
                <%= parrafo %>
            </p>

            <button><a href="/admin/servicios/formulariocrear">Crear servicio</a></button>

            <% if(servicios.length > 0) {%>

                <% servicios.forEach(element=> {%>

                    <h2>
                        <%= element.nombre %>
                    </h2>

                    <p>
                        <%= element.descripcion %>
                    </p>
                    <button><a href="/admin/servicios/formularioactualizar/<%= element._id %>">Actualizar</a></button>
                    <button><a href="/admin/servicios/eliminar/<%= element._id %>">Eliminar</a></button>
                    
                    <% }); %>

                        <% } else { %>

                            <p>No hay servicios</p>

                            <% } %>
        </main>


        <%- include('./templates/footer.ejs') %>